<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<package name="actionLogin" namespace="/actionLogin" extends="struts-default" >
		<action name="login" class="com.zsglj.action.Login" method="execute">
			<result name="adminloginsuccess">/pageAreas/Admin/HomePage/home.jsp</result>
			<result name="success">/pageAreas/HomePage/home.jsp</result>
			<result name="input">/pageAreas/login.jsp</result>
		</action>
		<action name="logout" class="com.zsglj.action.Login" method="logout">
			<result name="success">/pageAreas/login.jsp</result>
		</action>
	</package>

</struts>
